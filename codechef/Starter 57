#include <bits/stdc++.h>
using namespace std;

#define fastio ios::sync_with_stdio(false);cin.tie(0);
#define ll long long
const long long int m = 1000000007;

int main() {
    fastio;
    long long int test;
    cin >> test;
    while(test--)
    {
        
	long long int a,b;
	cin>>a>>b;
	bool boool = true;


    if (a==1 || b==1){
        boool = false;
    }
	else if ((a%2 != 0) && (b%2 != 0)){
	    boool = false;
	}else if (a==0 || b==0){
	    boool = true;
	}
	else{
	    boool = true;
	}
	
	(boool)? cout<<"YES"<<endl :cout<<"NO"<<endl;
    }
	return 0;
}
